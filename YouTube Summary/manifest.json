{
    "manifest_version": 3,
    "name": "YouTube Summary Extension",
    "version": "1.0",
    "permissions": ["activeTab", "https://www.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["https://www.youtube.com/*"],
          "js": ["content.js"]
        }
    ]
  }
  